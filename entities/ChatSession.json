{
  "name": "ChatSession",
  "type": "object",
  "properties": {
    "scenario": {
      "type": "string",
      "description": "Skenari i bisedës (takimi i parë, dating app, etj)"
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "assistant", "system"]
          },
          "content": {
            "type": "string"
          },
          "feedback": {
            "type": "string"
          },
          "rating": {
            "type": "number"
          }
        }
      }
    },
    "overall_score": {
      "type": "number",
      "description": "Rezultati përgjithshëm 1-10"
    }
  },
  "required": []
}

